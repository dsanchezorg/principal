import java.util.Scanner;
public class Ejercicio7_Piramide{
	public static void main(String[] args) {
		Scanner teclado=new Scanner(System.in);
		char espacio=' ', asterisco='*';
		int x=0;
		String decision="";
		
		System.out.println("Introduce la altura de la piramide");
		x=teclado.nextInt();
		while(decision != "s")
		for(int i=1; i<=x; i++){
			for(int espacios=x-i; espacios>0; espacios--){
				System.out.print(+espacio);
			}for(int asteriscos=1; asteriscos<2*i; asteriscos++){
				System.out.print(+asterisco);
			}
		}System.out.println("Â¿Quiere reiniciar el programa?");
		 System.out.println("S o N");
		 decision=teclado.nextLine().toLowerCase();
	}
	
}







