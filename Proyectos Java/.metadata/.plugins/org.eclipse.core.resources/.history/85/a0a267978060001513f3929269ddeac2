import java.util.Scanner;
public class Ejercicio8_Numeros {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		@SuppressWarnings("resource")
		Scanner teclado=new Scanner(System.in);
		float A=0, B=0, C=0, D=0, suma=0, producto=0;
		A=teclado.nextFloat();
		B=teclado.nextFloat();
		C=teclado.nextFloat();
		D=teclado.nextFloat();
		suma=A+B;
		producto=C*D;
		System.out.println("La suma de los dos primeros numeros da:" +suma);
		System.out.println("La multiplicacion de los dos ultimos numeros da:" +producto);
		
		
	}

}
