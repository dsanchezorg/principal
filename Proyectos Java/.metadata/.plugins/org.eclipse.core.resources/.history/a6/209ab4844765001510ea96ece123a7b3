import java.util.Scanner;
public class Ejercicio6_Monedas {
	public static void main(String[] args) {
		Scanner teclado=new Scanner(System.in);
		double cantidad=0;
		double cts50=0.50;
		double cts20=0.20;
		double cts10=0.10;
		double cts5=0.05;
		double cts2=0.02;
		double cts1=0.01;
		
		System.out.print("Introduce la cantidad");
		cantidad=teclado.nextDouble();
		
		cts50=cantidad/0.50;
		cantidad=cantidad%cts50;
		
		cts20=cantidad/0.20;
		cantidad=cantidad%cts20;
		
		cts10=cantidad/0.10;
		cantidad=cantidad%cts10;
		
		cts5=cantidad/0.05;
		cantidad=cantidad%cts5;
		
		cts2=cantidad/0.02;
		cantidad=cantidad%cts2;
		
		cts1=cantidad/0.01;
		cantidad=cantidad%cts1;
		
		System.out.println("Su desglose en monedas de centimo es:");
		System.out.println(cts50+" monedas de 50 centimos");
		System.out.println(cts20+" monedas de 20 centimos");
		System.out.println(cts10+" monedas de 10 centimos");
		System.out.println(cts5+" monedas de 5 centimos");
		System.out.println(cts2+" monedas de 2 centimos");
		System.out.println(cts1+" monedas de 1 centimo");

		
		}
}
