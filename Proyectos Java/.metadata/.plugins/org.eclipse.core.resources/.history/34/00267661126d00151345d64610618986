import java.util.Scanner;
public class Ejercicio10_NumerosPerfectos {

	public static void main(String[] args) {
		Scanner teclado=new Scanner(System.in);
		int i=0, n=0, suma=0;
		

	for(n=3; n<=1000; n++){	
		for(i=1; i<n; i++){
			if(n%i==0){
				suma=suma+i;
				if (suma==n){
					System.out.println("El numero "+n+" es perfecto");
				}
				}
			}
		}
	}

}
