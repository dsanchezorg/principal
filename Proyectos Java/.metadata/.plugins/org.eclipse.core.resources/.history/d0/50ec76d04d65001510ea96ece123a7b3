import java.util.Scanner;
public class Ejercicio7_Ingresos {

	public static void main(String[] args) {
		Scanner teclado=new Scanner(System.in);
		
		double saldoinicial=0, saldofinal=0, cantidad=0;
		int i=0 , r=0, tecla;
		
		System.out.print("De cuanto es su saldo inicial?");
		saldoinicial=teclado.nextDouble();
		System.out.print("Cuanto quiere ingresar o retirar?");
		cantidad=teclado.nextDouble();
		
		
		
		System.out.print("marque '1' si quiere hacer un ingreso");
		i=teclado.nextInt();
		System.out.print("marque '2' si quiere hacer un reintegro");
		r=teclado.nextInt();
		
		if (i==i){
		   saldofinal=saldoinicial+cantidad;
		   System.out.print("Su saldo actual es de "+saldofinal);
		}else if (r==r){
			saldofinal=saldoinicial-cantidad;
			   System.out.print("Su saldo actual es de "+saldofinal);
		}else{
			System.out.print("Error");
		}
			
	}

}
