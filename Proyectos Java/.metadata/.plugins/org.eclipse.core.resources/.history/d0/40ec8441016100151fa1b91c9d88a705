import java.util.Scanner;
public class Ejercicio6_SeparaNumeros {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int nTotal= 0; 
		Scanner teclado=new Scanner(System.in);
		System.out.print("Introduce un numero de Tres cifras y lo separare");
		nTotal=teclado.nextInt();
		if (nTotal>999) {System.out.print("Error, el numero introducido es mayor de 3 cifras");}
		if (nTotal<100) {System.out.print("Error, el numero introducido es menor de 3 cifras");}
		else {System.out.print("El numero introducido es "+nTotal );}
		
		char a=nTotal, b=nTotal, c=nTotal;
		
		a=teclado.nextLine().charAt(0);
		b=teclado.nextLine().charAt(1);
		c=teclado.nextLine().charAt(2);
		
		System.out.print("La primera cifra es"+a);
	}

}
