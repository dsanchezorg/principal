
public class Ejercicio9_Reloj {

	public static void main(String[] args) {
		int h=0, m=0, s=0;
		
		for(h=1; h<24; h++){
			System.out.println("hora "+h+" minuto "+m+" segundo "+s);
			for(m=1; m<60; m++){
				System.out.println("minuto "+m+" segundo "+s);
				for(s=1; s<60; s++){
					System.out.println("segundo "+s);
				}
				
			}
		}

	}

}
